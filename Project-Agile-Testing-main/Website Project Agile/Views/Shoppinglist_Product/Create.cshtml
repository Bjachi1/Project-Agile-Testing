@model Website_Project_Agile.Models.Shoppinglist_Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Toevoegen van Product aan winkelijst</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Shoppinglist_id" class="control-label"></label>
                <select asp-for="Shoppinglist_id" class ="form-control" asp-items="ViewBag.Shoppinglist_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product_id" class="control-label"></label>
                <select asp-for="Product_id" class ="form-control" asp-items="ViewBag.Product_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
